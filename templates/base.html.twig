<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}GSB Symfony -
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
						           and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
			<link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">
		{% endblock %}

		{% block javascripts %}
			{#{{ encore_entry_script_tags('app') }}#}
		{% endblock %}
	</head>
	<body class="flex flex-col h-screen bg-blue-200">
		{% block navbar %}
			{% include('navbar.html.twig') %}
		{% endblock %}

		<div class="flex-grow"> {% block content %}{% endblock %}
			</div>

			{% block footer %}
				{% include('footer.html.twig') %}
			{% endblock %}
		</body>
	</html>
